! infinality-ultimate
Xft.antialias:  1
Xft.autohint:   0
Xft.hinting:    1
Xft.hintstyle:  hintfull
Xft.lcdfilter:  lcddefault
Xft.rgba:       rgb

Xcursor.size: 8

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.urgentOnBell:         true
URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50
URxvt.internalBorder:       3
URxvt.lineSpace:            0
URxvt.termName:             urxvt
URxvt.title:                urxvt



! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Meslo LG M DZ:regular:pixelsize=14,xft:Symbola:pixelsize=11
URxvt*boldFont: xft:Meslo LG M DZ:regular:pixelsize=14,xft:Symbola:pixelsize=11

! Fix font space
URxvt*letterSpace: -2
!URxvt*letterSpace: 0

! Fix 'special mode' pop ups
URxvt.iso14755:             false
URxvt.iso14755_52:          false

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher,clipboard
URxvt.matcher.button:       1
URxvt.url-launcher:         /home/jojo/.bin/firefox

URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste



! Cursor
URxvt.cursorBlink:          false
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

#include ".colors/flwr"
